<MudGrid>
    @if (IsLoading)
    {
        <MudItem xs="12" sm="3" md="3">
            <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Height="100px;" />
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Height="100px;" />
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Height="100px;" />
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Height="100px;" />
        </MudItem>
    }
    else
    {        
        <MudItem xs="12" sm="3" md="3">
            <MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;" Outlined="true">
                <MudIcon Icon="@Icons.Material.Filled.OtherHouses" Color="Color.Primary" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
                <div style="width:100%;">
                    <MudText Typo="Typo.h6" Class="mud-text-secondary mb-n1">Branch</MudText>
                    <MudText Class="d-flex justify-end pa-3" Typo="Typo.h6">@Branches</MudText>
                    </div>
                </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;" Outlined="true">
                <MudIcon Icon="@Icons.Material.Filled.Category" Color="Color.Surface" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
                <div style="width:100%;">
                    <MudText Typo="Typo.h6" Class="mud-text-secondary mb-n1">Categories</MudText>
                    <MudText Class="d-flex justify-end pa-3" Typo="Typo.h6">@Categories</MudText>
                </div>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;" Outlined="true">
                <MudIcon Icon="@Icons.Material.Filled.Category" Color="Color.Success" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
                <div style="width:100%;">
                    <MudText Typo="Typo.h6" Class="mud-text-secondary mb-n1">Products</MudText>
                    <MudText Class="d-flex justify-end pa-3" Typo="Typo.h6">@AvailableProducts</MudText>
                </div>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;" Outlined="true">
                <MudIcon Icon="@Icons.Material.Filled.ArrowCircleDown" Color="Color.Error" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
                <div style="width:100%;">
                    <MudText Typo="Typo.h6" Class="mud-text-secondary mb-n1">Sold Products</MudText>
                    <MudText Class="d-flex justify-end pa-3" Typo="Typo.h6">@SoldProducts</MudText>
                </div>
            </MudPaper>
        </MudItem>
    }
</MudGrid>
@code {
    [Parameter, EditorRequired] public bool IsLoading { get; set; } = false;
    [Parameter, EditorRequired] public int Branches { get; set; } = 0;
    [Parameter, EditorRequired] public int AvailableProducts { get; set; } = 0;
    [Parameter, EditorRequired] public int SoldProducts { get; set; } = 0;
    [Parameter, EditorRequired] public int Categories { get; set; } = 0;

}